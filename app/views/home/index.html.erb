<blockquote>  
<h1 style="font-size: 40px">Blog</h1>
  <small class="lead" style="color: #999; font-size: 30px">Blog Blogado!</small>
</blockquote>

<div style="margin-left: 21px;">

  <%@artigos.each do |artigo| %>
    <blockquote>  
      <h1><%=artigo.titulo%></h1>
      <div class="well">  
        <h3><%=raw artigo.descricao%></h3>
      </div>
      <h3 class="pull-right"><small><%=l artigo.created_at, format: :long%> por <%= link_to artigo.usuario.email,'#' %> </small></h3>
      <br clear="all"/>
      <% artigo.comentarios.each do |comentario|%>
        <blockquote>
          <p class="lead"><%=comentario.descricao%></p>
          <footer class="lead" style="font-size: 11px;"><%=l comentario.created_at, format: :long%> por <%= link_to comentario.usuario.email,'#' %></footer>
        </blockquote>
      <% end -%>

      <%= render file: 'comentarios/_form.html', locals:{artigo: artigo} %>
    </blockquote>
    <hr />
    <hr />
  <% end -%>

</div>


